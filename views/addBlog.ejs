<!DOCTYPE html>
<html>

<head>
  <%- include('./partials/head.ejs')%>
  <title>New Blog</title>
  <link rel="stylesheet" href="/stylesheet/style.css">
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
  <script src="https://cdn.tiny.cloud/1/t05kf2zunkoshutanbcl5resxryryfohkoscq1m4h9d5a1dx/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

<script>
tinymce.init({
selector: "textarea",
plugins: [
"insertdatetime", "emoticons", "image", "table",],
toolbar:['undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | align lineheight | tinycomments | checklist numlist bullist indent outdent | emoticons charmap | removeformat',],
height: 400,})
</script>
</head>
<body>  
  <%- include ("./partials/nav.ejs") %>
  <%- include ("./partials/script.ejs") %>
  <div class="container mt-4">
    <form action="/blog" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" aria-describedby="title" name="title">
      </div>
     <div class="mb-3">
        <label for="Body" class="form-label">Body</label>
        <textarea class="form-control" placeholder="Leave a comment here" id="Body" name="body"></textarea>
      </div>
      <div class="mb-3">
        <label for="CI" class="form-label">Cover Image</label>
        <input type="file" class="form-control" placeholder="Leave a comment here" id="CI" name="coverImage" />
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
  <%- include ("./partials/footer.ejs") %>
</body>

</html>