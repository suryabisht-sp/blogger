<!DOCTYPE html>
<html>

<head>
  <%- include('./partials/head.ejs')%>
  <title>New Blog</title>
  <link rel="stylesheet" href="/stylesheet/style.css">
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
</head>

<body>
  <%- include ("./partials/nav.ejs") %>
  <%- include ("./partials/script.ejs") %>
  <div class="container mt-4">
    <form action="/blog" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" aria-describedby="title" name="title">
      </div>
      <div class="mb-3">
        <label for="Body" class="form-label">Body</label>
        <textarea class="form-control" placeholder="Leave a comment here" id="Body" name="body"></textarea>
      </div>
      <div class="mb-3">
        <label for="CI" class="form-label">Cover Image</label>
        <input type="file" class="form-control" placeholder="Leave a comment here" id="CI" name="coverImage" />
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
  <%- include ("./partials/footer.ejs") %>
</body>

</html>